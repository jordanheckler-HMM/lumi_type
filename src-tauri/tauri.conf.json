{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LumiType",
  "version": "0.1.0",
  "identifier": "com.lumitype.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../frontend"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "settings",
        "title": "LumiType Settings",
        "url": "settings.html",
        "width": 560,
        "height": 700,
        "resizable": false,
        "visible": false,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "LumiType",
        "url": "overlay.html",
        "width": 420,
        "height": 90,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png"
    ],
    "resources": [
      "models/*"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  }
}
