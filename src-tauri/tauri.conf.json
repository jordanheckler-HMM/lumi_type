{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LumiType",
  "version": "0.1.8",
  "identifier": "com.lumitype.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../frontend"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "settings",
        "title": "LumiType Settings",
        "url": "settings.html",
        "width": 560,
        "height": 700,
        "resizable": false,
        "visible": false,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "LumiType",
        "url": "overlay.html",
        "width": 420,
        "height": 90,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png"
    ],
    "resources": [
      "models/*"
    ],
    "macOS": {
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "13.0"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/jordanheckler-HMM/lumi_type/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFFOUUyMDk5MjRFQzMxNEMKUldSTU1ld2ttU0NlcmxYNEVha3hFN3ZCWUtpZzVDM0Q3N1hzVk1rUjFpamVhY2h1a0pHcFB1ZXcK"
    }
  }
}
